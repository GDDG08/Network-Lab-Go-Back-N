{
    "tasks": [
        {
            "type": "shell",
            "label": "CreateBuildDir",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                },
                "args": [
                    "-Force",
                    "build"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "cmakeRun",
            "command": "cmake",
            "args": [
                "-DCMAKE_MAKE_PROGRAM=mingw32-make",
                "-G",
                "\\\"MinGW Makefiles\\\"",
                "../"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "CreateBuildDir"
            ]
        },
        {
            "type": "shell",
            "label": "makeRun",
            "command": "mingw32-make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "cmakeRun"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}